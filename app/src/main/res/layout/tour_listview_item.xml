<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/tourImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="7dp"   />


    <LinearLayout
        android:layout_width="153dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_weight="1"         >

        <TextView
            android:id="@+id/tourTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="tour title view test"
            android:textColor="#6FFA21"
            android:textSize="10dp"
            android:layout_weight="2"
            />

        <TextView
                android:id="@+id/tourContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="tour Content Text test"
                android:textSize="13dp"
                android:textColor="#45ACF1"
                />
    </LinearLayout>

</LinearLayout>